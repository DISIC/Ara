generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipent {
  id    Int    @id @default(autoincrement())
  name  String
  email String

  Audit   Audit? @relation(fields: [auditId], references: [id])
  auditId Int?
}

model Audit {
  id Int @id @default(autoincrement())

  editUniqueId    String @unique
  consultUniqueId String @unique

  initiator String

  procedure String
  url       String

  contactName    String?
  contactEmail   String
  contactFormUrl String

  recipients Recipent[]

  auditorName  String
  auditorEmail String
}
